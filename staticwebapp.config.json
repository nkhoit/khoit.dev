{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/styles.css", "/script.js", "/images/*", "/.well-known/*"]
  },
  "routes": [
    {
      "route": "/.well-known/webfinger",
      "rewrite": "/.well-known/webfinger.json",
      "headers": {
        "content-type": "application/jrd+json"
      }
    },
    {
      "route": "/*",
      "allowedRoles": ["anonymous"]
    }
  ],
  "responseOverrides": {
    "404": {
      "rewrite": "/index.html",
      "statusCode": 200
    }
  },
  "mimeTypes": {
    ".json": "application/json",
    ".css": "text/css",
    ".js": "application/javascript",
    ".html": "text/html"
  }
}